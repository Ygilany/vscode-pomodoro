{
	"extends": [
		"tslint:recommended"
	],
	"rules": {
		"no-unused-expression": true,
		"no-duplicate-variable": true,
		"no-duplicate-key": true,
		"no-unused-variable": true,
		"no-trailing-whitespace": false,
		"interface-name": [
			false
		],
		"eofline": false,
		"curly": true,
		"class-name": true,
		"semicolon": ["always"],
		"triple-equals": true,
		"arrow-parens": false,
		"no-console": [
			"log",
			"error"
		],
		"trailing-comma": [
			false
		],
		"object-literal-sort-keys": false,
		"max-classes-per-file": [
		  false	
		],
		"max-line-length": [
			false
		],
		"quotemark": [
			"single"
		],
		"indent": [
			"tabs"
		],
		"variable-name": [
			"check-format",
			"allow-leading-underscore"
		],
		"align": [
			false
		],
		"no-empty-interface":[
			false
		]
	}
}